{
  "name": "homeportal",
  "version": "1.0.0",
  "description": "Frontend for my home APIs",
  "engines": {
    "node": "8.9.x"
  },
  "scripts": {
    "start": "node server",
    "heroku-postbuild": "cd client/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "dev-client": "cd client && npm start",
    "dev-server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run dev-server\" \"npm run dev-client\""
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "dependencies": {
    "dotenv": "^5.0.0",
    "express": "^4.14.1",
    "http-proxy-middleware": "^0.17.4",
    "serialize-javascript": "^1.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:dbakunas/homeportal.git"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^3.5.1",
    "nodemon": "^1.15.1"
  }
}
